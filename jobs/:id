<script>
    $(document).ready(function(e){
        init(e);
        loadMallDataCached(renderPage);
    })
    
    function renderPage(){
        var pathArray = window.location.pathname.split( '/' );
        var slug = pathArray[pathArray.length-1];
        job_details = getJobDetailsBySlug(slug);
        renderJobDetails('#job_details_container', '#job_details_template', job_details)
        show_content();
    }
</script>