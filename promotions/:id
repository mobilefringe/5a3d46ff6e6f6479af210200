<script>
    $(document).ready(function(e){
        init(e);
        loadMallDataCached(renderPage);
    })
    
    function renderPage(){
        var pathArray = window.location.pathname.split( '/' );
        var slug = pathArray[pathArray.length-1];
        promo_details = getPromotionDetailsBySlug(slug);
        renderPromotionDetails('#promotion_details_container', '#promotion_details_template', promo_details)
        show_content();
    }
</script>